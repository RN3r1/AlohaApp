<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mensaje_diario"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.com.bit01.alohaapp.MensajeDiario">

    <ImageView
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/card_back"
        android:id="@+id/tarjetaImg"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.42" />

    <TextView
        android:layout_width="255dp"
        android:layout_height="30dp"
        android:id="@+id/lblMensaje"
        android:textSize="24sp"
        android:textColor="?android:attr/colorPressedHighlight"
        app:layout_constraintLeft_toLeftOf="@+id/tarjetaImg"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/tarjetaImg"
        android:layout_marginTop="256dp" />

</android.support.constraint.ConstraintLayout>
